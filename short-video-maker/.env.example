# crucial for the project to work
LOG_LEVEL=trace # trace, debug, info, warn, error, fatal, silent
WHISPER_VERBOSE=true
PORT=3123
DEV=true # local development mode
DATA_DIR_PATH= # only for docker, otherwise leave empty

# ============================================================================
# Image and Video Generation APIs
# ============================================================================

# Google Gemini API (REQUIRED for Nano Banana image generation and VEO3 video)
GOOGLE_GEMINI_API_KEY= # Get from: https://ai.google.dev/
GOOGLE_CLOUD_PROJECT_ID= # Your GCP project ID
GOOGLE_CLOUD_REGION=us-central1 # GCP region

# VEO Model Selection (for VEO3 video generation)
VEO_MODEL=veo-3.0-fast-generate-001 # Options: veo-2.0-generate-001, veo-3.0-generate-001, veo-3.0-fast-generate-001

# VEO3 Audio Mode Configuration
# false (default): Replace VEO3's audio with TTS narration (숏츠 자동화용 - 내레이션)
# true: Use VEO3's native generated audio (대화/연기 콘텐츠용)
VEO3_USE_NATIVE_AUDIO=false

# Leonardo AI (optional - alternative image generation)
LEONARDO_API_KEY= # Get from: https://leonardo.ai/

# Video Source Selection
VIDEO_SOURCE=pexels # Options: pexels, veo, leonardo, ffmpeg, both

# ============================================================================
# TTS Provider Configuration
# ============================================================================

TTS_PROVIDER=kokoro # kokoro, google, or elevenlabs

# Google Cloud Text-to-Speech (optional - for natural voice)
GOOGLE_TTS_PROJECT_ID= # Your Google Cloud Project ID
GOOGLE_TTS_API_KEY= # Path to service account key file or leave empty for default auth

# ElevenLabs Text-to-Speech (optional - for ultra-realistic voice)
ELEVENLABS_API_KEY= # Your ElevenLabs API key

# ============================================================================
# Google Cloud Storage Configuration (optional - for video persistence)
# ============================================================================

GCS_BUCKET_NAME= # Your GCS bucket name
GCS_SERVICE_ACCOUNT_PATH= # Path to service account key JSON file
GCS_REGION=us-central1 # GCS region
GCS_STORAGE_CLASS=STANDARD # STANDARD, NEARLINE, COLDLINE, ARCHIVE
GCS_AUTO_DELETE_LOCAL_AFTER_DAYS=0 # 0 = never delete local files
GCS_AUTO_DELETE_DAYS=30 # Delete from GCS after X days
GCS_SIGNED_URL_EXPIRY_HOURS=24 # Signed URL expiry time

# ============================================================================
# YouTube Upload Configuration (optional)
# ============================================================================

YOUTUBE_CLIENT_SECRET_PATH= # Path to YouTube OAuth client secret JSON file

# ============================================================================
# Performance Configuration
# ============================================================================

WHISPER_MODEL=base.en # Options: tiny.en, base.en, small.en, medium, large
KOKORO_MODEL_PRECISION=fp32 # fp32 or fp16
CONCURRENCY=1 # Number of Chrome tabs for rendering (Docker only)
VIDEO_CACHE_SIZE_IN_BYTES=2097152000 # 2GB cache size (Docker only)
